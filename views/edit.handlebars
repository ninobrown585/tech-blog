<div class="card bg-dark m-3 text-white">
    <h1 class="pl-2 mb-4">Edit Your Entry</h1>

    <form class="edit-form">
        <div class="form-group pl-2 mb-4">
            <label for="blog-title">Title:</label>
            <input type="text" class="form-control" id="blog-title" value="{{post.title}}" type="text">
        </div>
        <div class="form-group pl-2 mb-4">
            <label for="blog-content">Content: </label>
            <textarea class="form-control" id="blog-content" value="{{post.body}}" type="text">{{post.body}}</textarea>
        </div>
        <button type="submit" class="btn btn-light ml-2 mb-4"> Update </button>
        <button type="button" class="btn btn-light delete ml-2 mb-4" post-id="{{post.id}}"> Delete </button>
    </form>
</div>

